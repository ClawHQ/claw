{
  "buildCommand": "NODE_ENV=production npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "astro",
  "regions": ["sin1"],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://api.ishi.so"
  },
  "git": {
    "deploymentEnabled": true
  },
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "functions": {
    "**": {
      "runtime": "nodejs20.x"
    }
  }
}
